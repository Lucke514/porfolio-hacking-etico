---
import { Search, Shield, ExternalLink, Eye, EyeOff, PlayCircle } from 'lucide-react';

const herramientasActivas = [
    {
        nombre: "Nmap",
        descripcion: "Escáner de redes para descubrir hosts y servicios activos en una red.",
        url: "https://nmap.org/download.html",
        comandoEjemplo: "nmap -sS -sV -O 192.168.1.1",
        icon: "Eye"
    },
    {
        nombre: "Recon-ng",
        descripcion: "Framework completo de reconocimiento web con múltiples módulos integrados.",
        url: "https://github.com/lanmaster53/recon-ng",
        comandoEjemplo: "recon-ng",
        icon: "Search"
    },
    {
        nombre: "theHarvester",
        descripcion: "Herramienta para recolectar correos electrónicos, subdominios y otra información pública.",
        url: "https://github.com/laramies/theHarvester",
        comandoEjemplo: "theHarvester -d example.com -b google",
        icon: "Search"
    }
];

const herramientasPasivas = [
    {
        nombre: "Maltego",
        descripcion: "Herramienta para análisis de enlaces y recopilación de información visual.",
        url: "https://www.maltego.com/downloads/",
        comandoEjemplo: "Maltego CE",
        icon: "EyeOff"
    },
    {
        nombre: "Shodan",
        descripcion: "Motor de búsqueda para descubrir dispositivos conectados a Internet.",
        url: "https://www.shodan.io/",
        comandoEjemplo: "shodan search apache",
        icon: "Search"
    },
    {
        nombre: "Google Dorks",
        descripcion: "Consultas avanzadas de Google para encontrar información específica en sitios web.",
        url: "https://www.exploit-db.com/google-hacking-database",
        comandoEjemplo: 'site:example.com filetype:pdf "confidential"',
        icon: "Search"
    }
];

const medidasPrevencion = [
    {
        titulo: "Segmentación de Redes",
        descripcion: "Divide tu red en segmentos más pequeños para limitar el acceso y contener posibles intrusiones.",
        icon: "Shield"
    },
    {
        titulo: "Firewall Configurado",
        descripcion: "Asegúrate de que los firewalls estén configurados para bloquear puertos innecesarios.",
        icon: "Shield"
    },
    {
        titulo: "Actualizaciones",
        descripcion: "Mantén los sistemas al día para prevenir vulnerabilidades conocidas.",
        icon: "Shield"
    }
];

const videoURL = "https://www.youtube.com/embed/dQw4w9WgXcQ";
---

  <section class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <!-- Header Section with Animated Background -->
      <div class="relative max-w-4xl mx-auto text-center mb-16 p-8 rounded-2xl">
        <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
        <h1 class="relative text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 mb-6">
          Fase 1: Reconocimiento
        </h1>
        <p class="relative text-xl text-gray-700 dark:text-gray-300 leading-relaxed">
          El reconocimiento es la primera y crucial etapa en cualquier análisis de seguridad. Consiste en recopilar información clave sobre un objetivo para identificar vulnerabilidades y planificar estrategias efectivas.
        </p>
      </div>

      <!-- Active Footprinting Tools -->
      <div class="mb-20">
        <div class="flex items-center justify-center gap-4 mb-10">
          <Eye class:list="w-8 h-8 text-blue-600 dark:text-blue-400" />
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 text-center">
            Herramientas de Footprinting Activo
          </h2>
        </div>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {herramientasActivas.map((herramienta) => (
            <div class="group bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-700">
              <div class="p-6">
                <div class="flex items-center gap-4 mb-4">
                  <div class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-lg group-hover:bg-blue-200 dark:group-hover:bg-blue-800/40 transition-colors">
                    {herramienta.icon === "Eye" ? 
                      <Eye class:list="w-6 h-6 text-blue-600 dark:text-blue-400" /> :
                      <Search class:list="w-6 h-6 text-blue-600 dark:text-blue-400" />
                    }
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
                    {herramienta.nombre}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-400 mb-4">
                  {herramienta.descripcion}
                </p>
                <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-4 mb-4">
                  <code class="text-sm text-blue-600 dark:text-blue-400 font-mono block">
                    {herramienta.comandoEjemplo}
                  </code>
                </div>
                <a
                  href={herramienta.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
                >
                  <ExternalLink class:list="w-4 h-4" />
                  <span>Más Información</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Passive Footprinting Tools -->
      <div class="mb-20">
        <div class="flex items-center justify-center gap-4 mb-10">
          <EyeOff class:list="w-8 h-8 text-indigo-600 dark:text-indigo-400" />
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 text-center">
            Herramientas de Footprinting Pasivo
          </h2>
        </div>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {herramientasPasivas.map((herramienta) => (
            <div class="group bg-white dark:bg-gray-800 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100 dark:border-gray-700">
              <div class="p-6">
                <div class="flex items-center gap-4 mb-4">
                  <div class="p-3 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg group-hover:bg-indigo-200 dark:group-hover:bg-indigo-800/40 transition-colors">
                    {herramienta.icon === "EyeOff" ? 
                      <EyeOff class:list="w-6 h-6 text-indigo-600 dark:text-indigo-400" /> :
                      <Search class:list="w-6 h-6 text-indigo-600 dark:text-indigo-400" />
                    }
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
                    {herramienta.nombre}
                  </h3>
                </div>
                <p class="text-gray-600 dark:text-gray-400 mb-4">
                  {herramienta.descripcion}
                </p>
                <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-4 mb-4">
                  <code class="text-sm text-indigo-600 dark:text-indigo-400 font-mono block">
                    {herramienta.comandoEjemplo}
                  </code>
                </div>
                <a
                  href={herramienta.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 transition-colors"
                >
                  <ExternalLink class:list="w-4 h-4" />
                  <span>Más Información</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Prevention Measures -->
      <div class="max-w-4xl mx-auto mb-20">
        <div class="flex items-center justify-center gap-4 mb-10">
          <Shield class:list="w-8 h-8 text-red-600 dark:text-red-400" />
          <h2 class="text-3xl font-bold text-red-600 dark:text-red-400 text-center">
            Medidas de Prevención
          </h2>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {medidasPrevencion.map((medida) => (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-100 dark:border-gray-700 hover:shadow-xl transition-all duration-300">
              <h3 class="flex items-center gap-3 text-lg font-semibold mb-4 text-gray-900 dark:text-gray-100">
                <Shield class:list="w-5 h-5 text-red-600 dark:text-red-400" />
                {medida.titulo}
              </h3>
              <p class="text-gray-600 dark:text-gray-400">
                {medida.descripcion}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Video Section -->
      <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-center gap-4 mb-10">
          <PlayCircle class:list="w-8 h-8 text-gray-900 dark:text-gray-100" />
          <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 text-center">
            Video Explicativo
          </h2>
        </div>
        <div class="relative w-full aspect-video rounded-xl overflow-hidden shadow-xl">
          <iframe
            src={videoURL}
            class="absolute inset-0 w-full h-full"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </section>

<style>
  .bg-grid-pattern {
    background-image: radial-gradient(circle, #4F46E5 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>
