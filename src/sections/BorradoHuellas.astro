---
import '@/styles/globals.css';
import { FileText, Shield, Eye } from 'lucide-react';
import { MonitoringToolCard } from '@/components/cover-tracks/MonitoringToolCard';
import { PreventionMethodCard } from '@/components/cover-tracks/PreventionMethodCard';
import { AnonymityMethodsCard } from '@/components/cover-tracks/AnonymityMethodsCard';
import { monitoringTools, preventionMethods, anonymityMethods, videoURL } from '@/components/cover-tracks/data';
---
<section class="min-h-screen py-20">
    <div class="container mx-auto px-4">
        <!-- Header Section -->
        <div class="relative max-w-4xl mx-auto text-center mb-16">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-200 to-cyan-200 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-3xl blur-3xl opacity-30"></div>
            <div class="relative">
                <h1 class="text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-400 dark:to-cyan-400 mb-6">
                    Fase 5: Borrar Huellas
                </h1>
                <p class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed">
                    Esta fase consiste en eliminar cualquier rastro de actividades en el sistema objetivo, incluyendo registros, archivos temporales y metadatos. Esto dificulta la detección y asegura que futuras operaciones puedan ejecutarse sin levantar sospechas.
                </p>
            </div>
        </div>

        <!-- Monitoring Tools Section -->
        <div class="max-w-7xl mx-auto mb-20">
            <div class="flex items-center justify-center gap-4 mb-10">
                <FileText class:list="w-8 h-8 text-blue-600 dark:text-blue-400" />
                <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                    Herramientas de Monitoreo y Registro
                </h2>
            </div>
            <div class="grid gap-8 lg:grid-cols-2">
                {monitoringTools.map((tool) => (
                    <MonitoringToolCard tool={tool} />
                ))}
            </div>
        </div>

        <!-- Prevention Methods Section -->
        <div class="max-w-7xl mx-auto mb-20">
            <div class="flex items-center justify-center gap-4 mb-10">
                <Shield class:list="w-8 h-8 text-blue-600 dark:text-blue-400" />
                <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                    Prevención y Seguridad
                </h2>
            </div>
            <div class="grid gap-8 lg:grid-cols-2">
                {preventionMethods.map((method) => (
                    <PreventionMethodCard method={method} />
                ))}
                <AnonymityMethodsCard methods={anonymityMethods} />
            </div>
        </div>

        <!-- Video Section -->
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-center gap-4 mb-10">
                <Eye class:list="w-8 h-8 text-blue-600 dark:text-blue-400" />
                <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
                    Video Explicativo
                </h2>
            </div>
            <div class="relative aspect-video rounded-xl overflow-hidden shadow-xl">
                <iframe
                    src={videoURL}
                    title="Video sobre Visor de Eventos de Windows en Hacking Ético"
                    class="absolute inset-0 w-full h-full"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                ></iframe>
            </div>
        </div>
    </div>
</section>